<html>
  <head>
    <meta charset="utf-8">
    <title>Airbnb home</title>
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,700|Raleway:300,400,500,700">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/style.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- Leave those next 4 lines if you care about users using IE8 -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>
    <!-- Banner -->
    <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('images/background.jpg');">
      <div class="banner-content">
        <h1>WELCOME HOME</h1>
          <p>Rent unique places to stay from local hosts in 190+ countries</p>
            <!-- <a class="btn btn-primary btn-lg">How it works</a> -->
            <%= link_to "How it works", "#", class: "btn btn-primary btn-lg" %>
      </div>
    </div>

    <!-- Your features code -->
    <div class="container">
      <div class="text-centered">
          <!-- Your features code -->
        <ul class="list-inline">
          <li>
            <%= image_tag "globe.png", id: "size-image", class: "img-circle" %>
            <h4>Discover the world</h4>
            <p>The earth is your new home.</p>
          </li>
          <li>
            <%= image_tag "dollar.png", id: "size-image", class: "img-circle" %>
            <h4>Pay online</h4>
            <p>No cash issues anymore.</p>
          </li>
          <li>
            <%= image_tag "beer.png", id: "size-image", class: "img-circle" %>
            <h4>Meet people</h4>
            <p>Discover new culture and lifestyle.</p>
          </li>
          <li>
            <%= image_tag "heart.png", id: "size-image", class: "img-circle" %>
            <h4>Share and love</h4>
            <p>Join a community you will love.</p>
          </li>
        </ul>
      </div>
    </div>

    <!-- Your cards code -->
    <div class="text-centered">
      <h2>Your next trip</h2>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-4">
      <!-- insert <div class="card"> -->
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-paris.jpg');">
            <div class="card-category">Seb</div>
            <div class="card-description">
                <h2>Super Parisss</h2>
                <p>Where's the champagne ?</p>
            </div>
            <%= image_tag "seb.jpg", class: "card-user avatar-large" %>
            <%= link_to "#", "#", class: "card-link" %>
          </div>
        </div>

        <div class="col-xs-12 col-sm-4">
      <!-- insert <div class="card"> -->
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-brussels.jpeg');">
            <div class="card-category">Anne</div>
            <div class="card-description">
                <h2>Let's go to Brussels</h2>
                <p>to eat some chocolate : )</p>
            </div>
            <%= image_tag "anne.jpg", class: "card-user avatar-large" %>
            <%= link_to "#", "#", class: "card-link" %>
          </div>
        </div>

        <div class="col-xs-12 col-sm-4">
      <!-- insert <div class="card"> -->
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-london.jpeg');">
            <div class="card-category">London</div>
            <div class="card-description">
                <h2>I love London</h2>
                <p>Pint on Pint</p>
            </div>
            <%= image_tag "romain.jpg", class: "card-user avatar-large" %>
            <%= link_to "#", "#", class: "card-link" %>
          </div>
        </div>
      </div>
  </div>

    <!-- Your newsletter code -->
    <div class="text-centered">
      <h2>Get news from us</h2>
      <p>Leave us your mail and get news from us</p>
      <form action="#" class="form-inline">
        <input type="email" class="form-control" placeholder="bob@gmail.com">
        <input type="submit" value="Sign In" class="btn btn-primary">
      </form>
    </div>

    <!-- Your map code -->
    <div id="map" style="width: 100%; height: 400px;"></div>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>
    <script type="text/javascript">
      var myLatlng = new google.maps.LatLng(48.852937,2.364178);

      var myOptions = {
          zoom: 16,
          center: myLatlng,
          scrollwheel: false,
          mapTypeId: google.maps.MapTypeId.ROADMAP,
          styles: [] // TODO: replace [] by array from https://snazzymaps.com/
      };

      var map = new google.maps.Map(document.getElementById('map'), myOptions);
      var marker = new google.maps.Marker({
          position: myLatlng,
          map: map,
          title: "You are here!"
      });
</script>

    <!-- Your footer code -->
    <!--<div class="footer-background">-->

    <!--</div>-->

    <!-- Including Bootstrap JS (with its jQuery dependency) so that dynamic components work -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  </body>
</html>
